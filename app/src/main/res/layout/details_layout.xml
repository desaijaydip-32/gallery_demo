<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="400dp"
    android:background="@drawable/sheet_background"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/contstrain_layout"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingBottom="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/cancletextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:gravity="center"
        android:fontFamily="@font/reguler"
        android:textColor="#373737"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/cancle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sizetextView"
        tools:layout_editor_absoluteX="194dp" />

        <TextView
            android:id="@+id/sizetextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Size :"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/cancletextView"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/pathtextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Path :"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="@+id/sizetextView"
            app:layout_constraintTop_toBottomOf="@+id/sizetextView" />

        <TextView
            android:id="@+id/titletextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Title :"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="@+id/pathtextView2"
            app:layout_constraintTop_toBottomOf="@+id/pathtextView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/textview"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toEndOf="@+id/sizetextView"
            app:layout_constraintTop_toTopOf="@+id/sizetextView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/pathtextView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/titletextView3" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

